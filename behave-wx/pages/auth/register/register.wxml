      <input class="password" value="{{password}}" password bindinput="bindPasswordInput" placeholder="密码" placeholder-class="ppl-color"/>
      <image class="clear" id="clear-password" wx:if="{{ password.length > 0 }}" src="/static/images/clear_input.png" catchtap="clearInput"></image>
    </view>

    <view class="form-item">
      <input class="password" value="{{user.confirmPassword}}" password bindinput="bindConfirmPasswordInput" placeholder="确认密码" placeholder-class="ppl-color"/>
      <image class="clear" id="clear-confirm-password" wx:if="{{ user.confirmPassword.length > 0 }}" src="/static/images/clear_input.png" catchtap="clearInput"></image>
    </view> -->

    <view class="form-item">
      <input class="mobile" value="{{user.mobile}}" bindinput="bindMobileInput" placeholder="手机号" placeholder-class="ppl-color"/>
      <image wx:if="{{ user.mobile.length > 0 }}" id="clear-mobile" class="clear" src="/static/images/clear_input.png" catchtap="clearInput"></image>
    </view>
    <button type="primary" class="register-btn" bindtap="startRegister">确定</button>

  </view>
</view>