<view class="container">
  <view class="form-box">

    <view class="form-item">
      <input class="username" value="{{user.username}}" bindinput="bindUsernameInput" placeholder="真实姓名" placeholder-class="ppl-color" auto-focus/>
      <image wx:if="{{ user.username.length > 0 }}" id="clear-username" class="clear" src="/static/images/clear_input.png" catchtap="clearInput"></image>
    </view>
   
    <view class="form-item">
      <picker mode = 'selector' class="username" bindchange="bindPickerChange" value="{{id}}" range="{{classArray}}" range-key="name">
        <view wx:if="{{class=='班级'}}" class="ppl-color">{{class}}</view>
        <view wx:else>{{class}}</view>
      </picker>
      <image wx:if="{{ class.length > 0 && class!='班级'}}" id="clear-class" class="clear" src="/static/images/clear_input.png" catchtap="clearInput"></image>
    </view>
