/* pages/behave/student/index.wxss */
.class-info{
  width: 100%;
}
.class-info-image{
  width: 100%;
  height: 417rpx;
  border-radius: 50rpx;
}
.class-info-js{
  padding-left: 20rpx;
  margin-top: 20rpx;
  line-height: 70rpx;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-size: large;
  font-weight: 800;
}
.class-info-detail{
  margin-top: 10rpx;
  text-indent:2em;
  font-family: Arial, Helvetica, sans-serif;
  font-weight: 100;
}
.separate {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  width: 100%;
  height: 3rpx;
  border-bottom: 1rpx solid #ddd;
}
.teacher-info-lsjs{
  padding-left: 20rpx;
  margin-top: 10rpx;
  line-height: 70rpx;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-size: medium;
  font-weight: 500;
}
.teacher-info-detail{
  width: 100%;
  float: left;
  height: 130rpx;
}
.teacher-info-image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 25px;
  float: left;
  margin-left: 30rpx;
  line-height: 130rpx;
}
.teacher-info-text{
  float: left;
  margin-left: 30rpx;
}
.teacher-info-h{
  font-size: 110%;
  line-height: 40rpx;
}
.teacher-info-b{
  width: 500rpx;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  font-family: sans-serif;
  font-size: x-small;
  margin-top: 13rpx;
  color: rgb(150, 143, 143);
}
.kcap-border{
  padding: 37rpx;
  margin-top: 110rpx;
}
.kcap-header{
  border:1px dotted #ddd;
  width: 260rpx;
  height: 76rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  text-align: center;
  line-height: 76rpx;
}
.kcap-list-border{
  border:1px solid #eee;
  border-top-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.kcap-list-item{
  line-height: 80rpx;
  height: 80rpx;
  width: 100%;
  border:1px dotted #eee;
  padding-left: 20rpx;
  background: #8150500c;
}
.kcap-time{
  font-family: "Times New Roman",Georgia,Serif;
  margin-left: 20rpx;
}