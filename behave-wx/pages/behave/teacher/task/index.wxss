/* pages/behave/teacher/score/index.wxss */

.kcap-border{
  padding: 37rpx;
}
.kcap-header{
  border:1px dotted #ddd;
  width: 260rpx;
  height: 76rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  text-align: center;
  line-height: 76rpx;
}
.kcap-list-border{
  border:1px solid #eee;
  border-top-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.kcap-list-item{
  line-height: 80rpx;
  height: 80rpx;
  width: 100%;
  border:1px dotted #eee;
  padding-left: 20rpx;
  background: #8150500c;
}
.kcap-time{
  font-family: "Times New Roman",Georgia,Serif;
  margin-left: 20rpx;
}
.kcap-status{
  font-size: 26rpx;
  color: rgb(240, 167, 140);
  float: right;
  margin-right: 20rpx;
}
.kcap-status:active{
  color: #ddd;
}
.bottom{
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 200rpx;
}
.start-pick{
  float: left;
  width: 48%;
  border-bottom: 1rpx solid #ddd;
  margin-left: 10rpx;
}
.end-pick{
  float: right;
  width: 47%;
  border-bottom: 1rpx solid #ddd;
  margin-right: 10rpx;
}
.bottom-button{
  width: 100%;
  position: fixed;
  bottom: 0rpx;
}

.bottom-view-pick{
  float: left;
  width: 100%;
}
.button{
  background-color: #20e6b5f8;
}
.zy-title:active{
  color: #ddd;
}
.task_jia {
  width: 115rpx;
  height: 115rpx;
  position: fixed;
  right: 20rpx;
  bottom: 200rpx;
  z-index: 121;
}
.jia_image{
  width: 80rpx;
  height: 80rpx;
}